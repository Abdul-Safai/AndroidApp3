<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient">

    <!-- TOP TITLE BAR -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:padding="20dp"
        app:title="GPS Distance Tracker"
        app:titleTextColor="@android:color/white"
        app:titleTextAppearance="@style/TextTitleLarge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SCROLL AREA -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- COORDINATES CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/latLngText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/latitude_longitude"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- CURRENT ADDRESS CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/currentAddressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/current_address_placeholder"
                    android:textColor="#E0E6F5"
                    android:textSize="15sp" />

            </LinearLayout>

            <!-- HOME ADDRESS CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/homeAddressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_address_placeholder"
                    android:textColor="#E0E6F5"
                    android:textSize="15sp" />

            </LinearLayout>

            <!-- DISTANCE CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_highlight"
                android:padding="16dp"
                android:elevation="6dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/distanceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/distance_placeholder"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- ADDRESS INPUT -->
            <EditText
                android:id="@+id/editAddressInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/home_address_input_hint"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0B8D6"
                android:background="@drawable/bg_input"
                android:textSize="16sp"
                android:imeOptions="actionDone"
                android:layout_marginBottom="16dp" />

            <!-- LOCATE + SET HOME BUTTONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btnLocate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_locate"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#5663FF" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnSetHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_set_home"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#35C1A8" />
            </LinearLayout>

            <!-- REFRESH + COMPASS BUTTONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btnRefresh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_refresh"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#FFB347" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnCompass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_compass"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#9B59B6" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
